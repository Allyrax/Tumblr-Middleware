#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../mocha-cobertura-reporter/bin/cobertura" "$@"
  ret=$?
else 
  node  "$basedir/../mocha-cobertura-reporter/bin/cobertura" "$@"
  ret=$?
fi
exit $ret
